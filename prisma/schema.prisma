datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Invitation {
  id                String   @id @default(cuid())
  guest             String
  slug              String   @unique
  email             String?
  totalPasses       Int      @default(2)
  confirmedPasses   Int? // 0 if not attending
  confirmed         Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
